<?xml version="1.0"?>
<massive-search-mapping xmlns="http://massiveart.com/schema/dic/massive-search-mapping">
    <mapping class="Manuxi\SuluTestimonialsBundle\Entity\Testimonial">
        <index value="'testimonials' ~ (object.isPublished() ? '' : '_draft')" expr="'testimonials' ~ (object.isPublished() ? '' : '_draft')"/>
        <id property="id"/>
        <title expr="object.getTitle()"/>
        <description expr="object.getText()"/>
        <url expr="object.getRoutePath()" />
        <locale property="locale"/>
        <fields>
            <field name="name" expr="object.getTitle()" type="string"/>
            <field name="text" expr="object.getText()" type="string"/>
            <field name="rating" expr="object.getRating()" type="string"/>
        </fields>
    </mapping>
</massive-search-mapping>